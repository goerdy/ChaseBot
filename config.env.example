# Telegram Bot Konfiguration
TELEGRAM_API_KEY=YOUR_BOT_API_KEY_HERE
ADMIN=YOUR_TELEGRAM_USERNAME
LOGLEVEL=info
DATABASE_FILE=chasebot.db
DATABASE_PATH=./telegram_chase_bot.db
LOG_LEVEL=INFO
LOG_FILE=./telegram_chase_bot.log

# Map Provider: Leaflet-HTML | py-staticmap-PNG | LokalMapServer-PNG
MapProvider=py-staticmap-PNG
SEND_IMAGE_AS_DOCUMENT=true
# lenght of longest side in px
PNGMAP_EXPORT_MAXSIZE=2500

# Tile Provider für py-staticmap-PNG (nur relevant wenn MapProvider=py-staticmap-PNG)
# Verfügbare Optionen:
# - OSM: OpenStreetMap Standard (farbig, größere Dateien)
# - CartoDarkNoLabels: Dunkles Design ohne Labels (kleine Dateien, empfohlen)
# - CartoNoLabels: Farbig ohne Labels (mittlere Dateien)
# - ArcGISWorldImagery: Satellitenbilder (sehr große Dateien)
TILE_PROVIDER=OSM

# Tile-Caching Einstellungen
# - TILE_CACHING: Aktiviert lokales Caching der Tiles (true/false)
# - TILE_CACHE_DIR: Verzeichnis für gecachte Tiles
# - TILE_CACHE_MAX_SIZE: Maximale Anzahl gecachter Tiles (0 = unbegrenzt)
TILE_CACHING=true
TILE_CACHE_DIR=tile_cache
TILE_CACHE_MAX_SIZE=1000

MAX_LOCATION_AGE_MINUTES=5

